>>> x = '0123456789'
>>> print (x[0:2])
01
>>> print (x[1:2])
1
>>> print (x[2:4])
23
>>> print (x[0:5])
01234
>>> print (x[1:8])
1234567
>>> print (x[:2])
01
>>> print (x[4:])
456789
>>> print (x[4:-1])
45678
>>> print (x[-4:-1])
678
>>> print (x[:])
0123456789
